@{
    ViewBag.Title = "Şifre Sıfırlama";
}

<div class="reset-password-container">
    <h2>Şifre Sıfırlama</h2>

    <!-- Kullanıcı adı veya e-posta girişi -->
    <form method="post" action="/Account/ResetPassword">
        <div class="form-group">
            <label for="username">Kullanıcı Adı veya E-posta</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>

        <!-- Yeni şifre girişi -->
        <div class="form-group">
            <label for="newPassword">Yeni Şifre</label>
            <input type="password" id="newPassword" name="newPassword" class="form-control" required
                   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{5,}"
                   title="Şifre en az 5 karakter uzunluğunda, bir büyük harf, bir küçük harf ve bir sayı içermelidir." />
            <small class="password-rules">
                Şifre en az 5 karakter, bir büyük harf, bir küçük harf ve bir rakam içermelidir.
            </small>
        </div>

        <!-- Yeni şifre doğrulama -->
        <div class="form-group">
            <label for="confirmPassword">Yeni Şifre (Tekrar)</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Şifreyi Sıfırla</button>

        @if (ViewBag.ErrorMessage != null)
        {
            <p style="color: red;">@ViewBag.ErrorMessage</p>
        }
    </form>
</div>

<!-- Stil Özellikleri -->
<style>
    .reset-password-container {
        max-width: 400px;
        margin: auto;
        padding: 2em;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .reset-password-container h2 {
        text-align: center;
        margin-bottom: 1.5em;
    }

    .form-group {
        margin-bottom: 1em;
    }

    .form-control {
        width: 100%;
        padding: 0.5em;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        width: 100%;
        padding: 0.5em;
        background-color: #007bff;
        border: none;
        color: white;
        font-size: 1em;
        border-radius: 4px;
    }

    .password-rules {
        font-size: 0.85em;
        color: #555;
    }
</style>
