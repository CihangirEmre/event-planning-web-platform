@{
    ViewBag.Title = "Kayıt Ol";
}

<div class="register-container">
    <h2>Yeni Hesap Oluştur</h2>

    <!-- Yeni Hesap Formu -->
    <form method="post" enctype="multipart/form-data" action="/Account/Register">
        <div class="form-group">
            <label for="username">Kullanıcı Adı</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="firstName">Ad</label>
            <input type="text" id="firstName" name="firstName" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="lastName">Soyad</label>
            <input type="text" id="lastName" name="lastName" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="birthDate">Doğum Tarihi</label>
            <input type="date" id="birthDate" name="birthDate" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="gender">Cinsiyet</label>
            <select id="gender" name="gender" class="form-control" required>
                <option value="">Seçiniz</option>
                <option value="Erkek">Erkek</option>
                <option value="Kadın">Kadın</option>
                <option value="Diğer">Diğer</option>
            </select>
        </div>

        <div class="form-group">
            <label for="phoneNumber">Telefon Numarası</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" pattern="[0-9]{10}" title="Telefon numarası 10 rakamdan oluşmalıdır." required />
        </div>

        <div class="form-group">
            <label for="password">Şifre</label>
            <input type="password" id="password" name="password" class="form-control" required
                   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                   title="Şifre en az 8 karakter uzunluğunda, bir büyük harf, bir küçük harf ve bir sayı içermelidir." />
            <small class="password-rules">
                Şifre en az 8 karakter, bir büyük harf, bir küçük harf ve bir rakam içermelidir.
            </small>
        </div>

        <div class="form-group">
            <label for="confirmPassword">Şifre (Tekrar)</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="profilePhoto">Profil Fotoğrafı</label>
            <input type="file" id="profilePhoto" name="profilePhoto" class="form-control" accept=".jpg" required />
        </div>

        <div class="form-group">
            <label for="location">Konum</label>
            <input type="text" id="location" name="location" class="form-control" placeholder="Örn: İstanbul, Türkiye" required />
        </div>

        <div class="form-group">
            <label>İlgi Alanları</label>
            @if (ViewBag.IlgiAlanlari != null && ViewBag.IlgiAlanlari.Count > 0)
            {
                foreach (var ilgiAlani in ViewBag.IlgiAlanlari)
                {
                    <div>
                        <input type="checkbox" id="ilgiAlani_@ilgiAlani.ID" name="selectedInterests" value="@ilgiAlani.ID" />
                        <label for="ilgiAlani_@ilgiAlani.ID">@ilgiAlani.IlgiAlanAdi</label>
                    </div>
                }
            }
            else
            {
                <p>Henüz ilgi alanları tanımlı değil.</p>
            }
        </div>

        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </form>

    <div class="login-option">
        <p>Zaten bir hesabınız var mı? <a href="/Account/Login">Giriş Yap</a></p>
    </div>
</div>

<style>
    .register-container {
        max-width: 400px;
        margin: auto;
        padding: 2em;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        .register-container h2 {
            text-align: center;
            margin-bottom: 1.5em;
        }

    .form-group {
        margin-bottom: 1em;
    }

    .form-control {
        width: 100%;
        padding: 0.5em;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        width: 100%;
        padding: 0.5em;
        background-color: #007bff;
        border: none;
        color: white;
        font-size: 1em;
        border-radius: 4px;
    }

    .login-option {
        text-align: center;
        margin-top: 1.5em;
    }

        .login-option a {
            color: #007bff;
            text-decoration: none;
        }

            .login-option a:hover {
                text-decoration: underline;
            }
</style>
