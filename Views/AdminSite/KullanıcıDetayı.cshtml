@model EventPlannerProject.Models.AdminSiteViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Detayları</title>
    <style>
        /* Genel Stil */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #a8edea, #fed6e3); /* Yumuşak arka plan geçişi */
        }

        .container {
            width: 90%;
            max-width: 600px;
            background-color: rgba(255, 255, 255, 0.9); /* Hafif opak kutu */
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h1 {
            text-align: center;
            color: #444;
            margin-bottom: 1.5rem;
        }

        .details-group {
            margin-bottom: 1rem;
        }

        .details-group label {
            font-weight: bold;
            color: #555;
        }

        .details-group span {
            margin-left: 0.5rem;
            color: #666;
        }

        ul {
            padding-left: 1.5rem;
            color: #666;
            margin-top: 0.5rem;
        }

        ul li {
            margin-bottom: 0.5rem;
        }

        .btn-back {
            display: block;
            width: fit-content;
            margin: 1.5rem auto 0;
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            text-align: center;
        }

        .btn-back:hover {
            background-color: #0056b3;
        }

        .no-interests {
            font-style: italic;
            color: #888;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Kullanıcı Detayları</h1>

        <div class="details-group">
            <label>Kullanıcı Adı:</label>
            <span>@Model.Kullanici.KullanıcıAdi</span>
        </div>
        <div class="details-group">
            <label>Ad:</label>
            <span>@Model.Kullanici.Ad</span>
        </div>
        <div class="details-group">
            <label>Soyad:</label>
            <span>@Model.Kullanici.Soyad</span>
        </div>
        <div class="details-group">
            <label>Email:</label>
            <span>@Model.Kullanici.Email</span>
        </div>
        <div class="details-group">
            <label>Telefon No:</label>
            <span>@Model.Kullanici.TelefonNo</span>
        </div>

        <!-- İlgi Alanları Listesi -->
        <div class="details-group">
            <label>İlgi Alanları:</label>
            @if (Model.IlgiAlanlari != null && Model.IlgiAlanlari.Any())
            {
                <ul>
                    @foreach (var ilgiAlani in Model.IlgiAlanlari)
                    {
                        <li>@ilgiAlani.IlgiAlanAdi</li>
                    }
                </ul>
            }
            else
            {
                <p class="no-interests">Bu kullanıcı için herhangi bir ilgi alanı tanımlı değil.</p>
            }
        </div>

        <a href="@Url.Action("KullanıcıYönetimi", "Admin")" class="btn-back">← Geri Dön</a>
    </div>
</body>
</html>
